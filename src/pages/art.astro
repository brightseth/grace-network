---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

---

<Layout title="Art Collection | Seth Goldstein">
  <Header />
  <main>
    <div class="container mx-auto px-4 py-24">
      <h1 class="text-4xl font-black mb-12 uppercase tracking-tight">Digital Art Collection</h1>
      
      <div class="flex items-center justify-center min-h-[400px]">
        <div class="text-center max-w-3xl">
          <h2 class="text-6xl md:text-7xl font-black text-gray-800 mb-8 border-b-4 border-black pb-4 inline-block">COMING SOON</h2>
          <p class="text-xl text-gray-600 mb-8">
            Our curated digital art collection is being updated. Please check back soon to explore Seth's generative art pieces and CryptoCitizens from the Bright Moments journey.
          </p>
          <a 
            href="https://gallery.so/sethnfts"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-4 bg-black text-white text-lg font-bold uppercase tracking-wider hover:bg-gray-900 transition-colors"
          >
            View Full Collection â†’
          </a>
        </div>
      </div>
    </div>
