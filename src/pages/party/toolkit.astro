            <circle cx="200" cy="200" r="190" fill="none" stroke="url(#pfGrad)" stroke-width="6" opacity="0.9"/>
            <circle cx="200" cy="200" r="175" fill="none" stroke="url(#pfGrad)" stroke-width="2" opacity="0.4"/>
            <circle cx="200" cy="200" r="165" fill="none" stroke="#C8A2FF" stroke-width="0.5" opacity="0.2"/>
            <!-- Network node decorations -->
            <circle cx="200" cy="18" r="8" fill="#FFD700" opacity="0.9"/>
            <circle cx="328" cy="78" r="6" fill="#C8A2FF" opacity="0.8"/>
            <circle cx="378" cy="185" r="7" fill="#FFD700" opacity="0.85"/>
            <circle cx="340" cy="310" r="6" fill="#C8A2FF" opacity="0.8"/>
            <circle cx="248" cy="378" r="8" fill="#FFD700" opacity="0.9"/>
            <circle cx="152" cy="378" r="6" fill="#C8A2FF" opacity="0.8"/>
