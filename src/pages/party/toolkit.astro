            <!-- Main headline -->
            <text x="540" y="560" text-anchor="middle" fill="#EEEEF0" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="96" font-weight="800" letter-spacing="-0.02em">I SIGNED</text>
            <text x="540" y="680" text-anchor="middle" fill="#EEEEF0" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="96" font-weight="800" letter-spacing="-0.02em">THE</text>
