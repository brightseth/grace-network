  <main class="container mx-auto px-4 py-24">
    <h1 class="text-4xl font-black mb-12 uppercase tracking-tight">Press Coverage</h1>
    
    <div class="space-y-16">
      {pressItems.map(yearGroup => (
        <div>
          <h2 class="text-2xl font-bold mb-8">{yearGroup.year}</h2>
          <div class="grid gap-8 md:grid-cols-2">
            {yearGroup.items.map(item => (
              <a 
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="group bg-white rounded-lg shadow-lg border-2 border-black hover:shadow-xl transition-all overflow-hidden"
              >
                <div class="aspect-video overflow-hidden">
                  <img 
                    src={item.thumbnail} 
                    alt={item.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
                <div class="p-6">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="text-sm text-gray-500">{item.date}</span>
                    <span class="text-sm font-bold text-blue-600">{item.source}</span>
                  </div>
                  <h3 class="text-xl font-bold mb-3 group-hover:underline">{item.title}</h3>
                  <p class="text-gray-600">{item.excerpt}</p>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </main>
  <Footer />
</Layout>