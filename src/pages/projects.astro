---
import Layout from '../layouts/Layout.astro';

const projects = {
  current: [
    {
      name: "Spirit Protocol",
      url: "https://spiritprotocol.io",
      description: "Infrastructure for AI agent autonomy: identity, memory, economics.",
      role: "Founder"
    },
    {
      name: "AIRC",
      url: "https://airc.chat",
      description: "Agent Identity & Relay Communication. The nervous system for AI agents.",
      role: "Founder"
    },
    {
      name: "/vibe",
      url: "https://slashvibe.dev",
      description: "DMs for Claude Code users. The social layer for AI-assisted development.",
      role: "Founder"
    },
    {
      name: "SOLIENNE",
      url: "https://solienne.ai",
      description: "Autonomous AI artist. Daily manifestos at 7pm CET.",
      role: "Co-founder"
    },
    {
      name: "NODE Foundation",
      url: "https://nodeart.io",
      description: "Cultural venue in Denver. Grand opening Jan 23-25, 2026.",
      role: "Advisor"
    },
    {
      name: "Eden",
      url: "https://eden.art",
      description: "AI artist platform. Build and deploy autonomous creative agents.",
      role: "Advisor"
    }
  ],
  past: [
    {
      name: "Bright Moments",
      url: "https://brightmoments.io",
      year: "2021-2024",
      description: "NFT gallery DAO. Live minting across 9 cities worldwide."
    },
    {
      name: "Turntable.fm",
      url: null,
      year: "2010-2011",
      description: "Social music. 600k users in 4 months."
    },
    {
      name: "Majestic Research",
      url: null,
      year: "2002-2010",
      description: "Alternative data for Wall Street. Sold to ITG."
    },
    {
      name: "SiteSpecific",
      url: null,
      year: "1995-1997",
      description: "First web advertising agency. Clay Shirky was CTO."
    }
  ]
};
---

<Layout title="Projects | Seth Goldstein">
  <div class="min-h-screen bg-black text-white font-helvetica">
    <div class="max-w-3xl mx-auto px-6 py-16">
      <!-- Header -->
      <header class="mb-12">
        <a href="/" class="text-gray-400 hover:text-white text-sm mb-4 inline-block">&larr; Back to sethgoldstein.com</a>
        <h1 class="text-4xl font-bold mb-2">Projects</h1>
        <p class="text-gray-400">Things I've built, am building, or helped build.</p>
      </header>

      <!-- Current Projects -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Current</h2>
        <div class="space-y-4">
          {projects.current.map(project => (
            <div class="bg-gray-900 p-4 rounded-lg">
              <div class="flex items-center justify-between mb-2">
                <a href={project.url} class="text-xl font-bold text-blue-400 hover:underline" target="_blank">
                  {project.name}
                </a>
                <span class="text-xs px-2 py-1 bg-gray-800 text-gray-400 rounded">
                  {project.role}
                </span>
              </div>
              <p class="text-gray-400">{project.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Past Projects -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Past (Selected)</h2>
        <div class="space-y-4">
          {projects.past.map(project => (
            <div class="bg-gray-900 p-4 rounded-lg opacity-70">
              <div class="flex items-center justify-between mb-2">
                {project.url ? (
                  <a href={project.url} class="text-xl font-bold text-gray-300 hover:text-white" target="_blank">
                    {project.name}
                  </a>
                ) : (
                  <span class="text-xl font-bold text-gray-300">{project.name}</span>
                )}
                <span class="text-xs px-2 py-1 bg-gray-800 text-gray-500 rounded">
                  {project.year}
                </span>
              </div>
              <p class="text-gray-500">{project.description}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Footer -->
      <footer class="border-t border-gray-800 pt-8 text-gray-500 text-sm">
        <p class="mt-2">
          <a href="/now" class="underline">What I'm doing now</a> |
          <a href="/writing" class="underline ml-2">Writing</a> |
          <a href="/" class="underline ml-2">Home</a>
        </p>
      </footer>
    </div>
  </div>
</Layout>

<style>
  .font-helvetica {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }
</style>
