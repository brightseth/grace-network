            <line x1="120" y1="130" x2="145" y2="155" stroke="#8B5CF6" stroke-width="0.75" opacity="0.25"/>
            <line x1="155" y1="105" x2="90" y2="100" stroke="#8B5CF6" stroke-width="0.5" opacity="0.15"/>
