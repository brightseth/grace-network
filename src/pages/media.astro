<Layout title="Media | Seth Goldstein">
  <Header />
  <main class="container mx-auto px-4 py-24">
    <h1 class="text-4xl font-black mb-12 uppercase tracking-tight">Media</h1>
    
    <!-- Videos Section -->
    <section class="mb-20">
      <h2 class="text-2xl font-bold mb-8 border-b-2 border-black pb-2">Videos</h2>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {videos.map(video => (
          <a 
            href={video.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group block bg-white border-2 border-black hover:shadow-xl transition-all overflow-hidden"
          >
            <div class="relative aspect-video overflow-hidden">
              <img 
                src={video.thumbnail} 
                alt={video.title}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-opacity flex items-center justify-center">
                <div class="w-16 h-16 bg-white bg-opacity-80 rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-black" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  </svg>
                </div>
              </div>
            </div>
            <div class="p-4">
              <h3 class="text-lg font-bold group-hover:underline line-clamp-2">{video.title}</h3>
              <p class="text-gray-600 mt-2 text-sm">{video.description}</p>
            </div>
          </a>
        ))}
      </div>
    </section>

    <!-- Artworks Section -->
    <section>
      <h2 class="text-2xl font-bold mb-8 border-b-2 border-black pb-2">Featured Artworks</h2>
      <div class="grid gap-8 md:grid-cols-2">
        {artworks.map(artwork => (
          <a 
            href={artwork.link}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-white rounded-lg shadow-lg border-2 border-black hover:shadow-xl transition-all overflow-hidden"
          >
            <div class="aspect-square overflow-hidden bg-gray-100">
              <img
                src={artwork.image}
                alt={artwork.title}
                class="w-full h-full object-contain transition-transform duration-500 group-hover:scale-105"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <div class="flex items-center justify-between mb-2">
                <span class="text-sm text-gray-500">{artwork.date}</span>
                <span class="text-sm font-medium text-blue-600">By {artwork.artist}</span>
              </div>
              <h3 class="text-xl font-bold mb-2 group-hover:underline">{artwork.title}</h3>
              <p class="text-gray-600 text-sm">{artwork.description}</p>
            </div>
          </a>
        ))}
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>