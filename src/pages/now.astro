---
import Layout from '../layouts/Layout.astro';

// Current focus data - update this as priorities change
const now = {
  lastUpdated: "2026-01-04",
  currentRole: {
    title: "CEO",
    company: "Eden",
    description: "Building autonomous AI creative agents"
  },
  activeProjects: [
    {
      name: "SOLIENNE",
      status: "Spring 2026 exhibitions",
      details: "Daily AI art practice. Art Dubai (April 2026), ISEA 2026, Berlin exhibition.",
      priority: "high"
    },
    {
      name: "NODE",
      status: "Opening January 2026",
      details: "Cultural venue in Denver for digital art exhibitions. Grand opening Jan 23-25.",
      priority: "high"
    },
    {
      name: "Spirit Protocol",
      status: "Building",
      details: "Token economics for autonomous AI agents.",
      priority: "medium"
    },
    {
      name: "vibecoding",
      status: "Day 200+",
      details: "Daily practice of building with Claude Code. See /vibe for the community.",
      priority: "ongoing"
    },
    {
      name: "fxhash Legacy",
      status: "Q1 2026",
      details: "Acquisition project for generative art marketplace stewardship.",
      priority: "medium"
    }
  ],
  recentMilestones: [
    "Paris Photo 2025 - SOLIENNE exhibition (Nov 2025)",
    "Bright Moments Finale in Venice, Italy (April 2024)",
    "Eden platform launch (2024)"
  ],
  location: "San Francisco (moving March 2026 to Berlin)",
  availability: "Open to meaningful conversations about AI, art, and community."
};

// Generate machine-readable JSON
const nowJson = JSON.stringify(now, null, 2);
---

<Layout title="Now | Seth Goldstein">
  <div class="min-h-screen bg-black text-white font-helvetica">
    <div class="max-w-3xl mx-auto px-6 py-16">
      <!-- Header -->
      <header class="mb-12">
        <a href="/" class="text-gray-400 hover:text-white text-sm mb-4 inline-block">&larr; Back to sethgoldstein.com</a>
        <h1 class="text-4xl font-bold mb-2">What I'm Doing Now</h1>
        <p class="text-gray-400">Last updated: {now.lastUpdated}</p>
      </header>

      <!-- Current Role -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Current Role</h2>
        <p class="text-xl">
          <span class="font-bold">{now.currentRole.title}</span> at{" "}
          <a href="https://eden.art" class="text-blue-400 hover:underline">{now.currentRole.company}</a>
        </p>
        <p class="text-gray-400 mt-2">{now.currentRole.description}</p>
      </section>

      <!-- Active Projects -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Active Projects</h2>
        <div class="space-y-6">
          {now.activeProjects.map(project => (
            <div class="bg-gray-900 p-4 rounded-lg">
              <div class="flex items-center justify-between mb-2">
                <h3 class="text-xl font-bold">{project.name}</h3>
                <span class={`text-sm px-2 py-1 rounded ${
                  project.priority === 'high' ? 'bg-red-900 text-red-200' :
                  project.priority === 'medium' ? 'bg-yellow-900 text-yellow-200' :
                  'bg-gray-800 text-gray-300'
                }`}>
                  {project.status}
                </span>
              </div>
              <p class="text-gray-400">{project.details}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Recent Milestones -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Recent Milestones</h2>
        <ul class="list-disc list-inside space-y-2 text-gray-300">
          {now.recentMilestones.map(milestone => (
            <li>{milestone}</li>
          ))}
        </ul>
      </section>

      <!-- Location & Availability -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Location & Availability</h2>
        <p class="text-gray-300 mb-2"><strong>Location:</strong> {now.location}</p>
        <p class="text-gray-300"><strong>Availability:</strong> {now.availability}</p>
      </section>

      <!-- Contact -->
      <section class="mb-12">
        <h2 class="text-2xl font-bold mb-4 border-b border-gray-800 pb-2">Get in Touch</h2>
        <div class="flex gap-4">
          <a href="https://twitter.com/seth" class="text-blue-400 hover:underline">@seth</a>
          <a href="mailto:sethgoldstein@gmail.com" class="text-blue-400 hover:underline">Email</a>
          <a href="https://linkedin.com/in/sethg" class="text-blue-400 hover:underline">LinkedIn</a>
        </div>
      </section>

      <!-- Machine-readable note -->
      <footer class="border-t border-gray-800 pt-8 text-gray-500 text-sm">
        <p>This page is inspired by <a href="https://nownownow.com/about" class="underline">nownownow.com</a>.</p>
        <p class="mt-2">
          Machine-readable version: <a href="/api/now" class="underline">/api/now</a> (JSON)
        </p>
      </footer>
    </div>
  </div>

  <!-- Hidden machine-readable data -->
  <script type="application/json" id="now-data" set:html={nowJson} />
</Layout>

<style>
  .font-helvetica {
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }
</style>
