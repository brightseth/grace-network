---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ImageUploader from '../components/ImageUploader';
import { SupabaseProvider } from '../components/SupabaseProvider';
import PasswordProtection from '../components/PasswordProtection';
---

<Layout title="Upload Images | Seth Goldstein">
  <Header />
  <main class="container mx-auto px-4 py-24">
    <h1 class="text-4xl font-black mb-12 uppercase tracking-tight">Upload Images</h1>
    
    <div class="max-w-4xl mx-auto">
      <div id="content-container">
        <div id="password-protection" class="block">
          <PasswordProtection 
            client:load 
            correctPassword="hamlet"
            onSuccess={() => {
              document.getElementById('password-protection')?.classList.add('hidden');
              document.getElementById('upload-content')?.classList.remove('hidden');
              // Dispatch event for session storage
              window.dispatchEvent(new CustomEvent('passwordSuccess'));
            }}
          />
        </div>
        
        <div id="upload-content" class="hidden">
          <p class="text-xl text-gray-600 mb-8">
            Upload images to share with the community. Images will be stored in our Supabase storage and can be easily copied and shared.
          </p>
          
          <SupabaseProvider client:load>
            <ImageUploader client:load />
          </SupabaseProvider>
          
          <div class="mt-12 p-6 bg-gray-50 rounded-lg border border-gray-200">
            <h2 class="text-xl font-bold mb-4">About Image Uploads</h2>
            <ul class="list-disc pl-6 space-y-2 text-gray-600">
              <li>Images are stored in a public bucket and will be accessible to anyone with the link</li>
              <li>Maximum file size: 5MB</li>
              <li>Supported formats: PNG, JPG, GIF</li>
              <li>Images cannot be deleted once uploaded</li>
              <li>Do not upload sensitive or private information</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  // Check if the user has already entered the password in this session
  document.addEventListener('DOMContentLoaded', () => {
    const hasAccess = sessionStorage.getItem('uploadAccess') === 'true';
    if (hasAccess) {
      document.getElementById('password-protection')?.classList.add('hidden');
      document.getElementById('upload-content')?.classList.remove('hidden');
    }
  });

  // Listen for the custom event that signals successful password entry
  window.addEventListener('passwordSuccess', () => {
    sessionStorage.setItem('uploadAccess', 'true');
  });
</script>