---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import SectionHeader from '../components/SectionHeader.astro';
---

<Layout
  title="Campaign Toolkit — The Grace Network"
  description="Download social media assets, profile frames, shareable graphics, and everything you need to show your alignment and grow The Grace Network."
  image="https://sethgoldstein.com/party/og-grace-network.svg"
>
  <Nav currentPath="/toolkit" />

  <!-- Hero Section -->
  <section class="toolkit-hero">
    <div class="hero-content">
      <div class="hero-badge">CAMPAIGN TOOLKIT</div>
      <h1>
        <span class="hero-line-1">Your Campaign</span>
        <span class="hero-line-2">Toolkit</span>
      </h1>
      <p class="hero-subtitle">
        Everything you need to show your alignment and grow The Grace Network.
        Download social media assets, shareable graphics, and ready-to-post content.
      </p>
      <div class="hero-actions">
        <a href="#assets" class="btn-grace">Browse Assets</a>
        <a href="#ai-generator" class="btn-ghost-grace">AI Image Generator</a>
      </div>
      <p class="save-note">Right-click any SVG asset below to save it. All assets are free for supporters to use.</p>
    </div>
  </section>

  <!-- Developer Toolkit -->
  <section class="dev-toolkit-section">
    <div class="section-inner">
      <div class="dev-toolkit-card">
        <div class="dev-toolkit-content">
          <span class="dev-toolkit-badge">NEW</span>
          <h2>Developer Toolkit</h2>
          <p>
            The Grace Network is now a builder movement. Join a workstream, contribute code with Claude Code,
            and help build the governance infrastructure the world needs.
          </p>
          <a href="/build" class="btn-grace">Start Building &rarr;</a>
        </div>
        <div class="dev-toolkit-visual">
          <svg viewBox="0 0 200 200" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="30" y="30" width="140" height="100" rx="8" stroke="#3730A3" stroke-width="1.5"/>
            <path d="M60 70l15 15-15 15M85 100h30" stroke="#3730A3" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            <rect x="30" y="150" width="40" height="30" rx="4" stroke="#B45309" stroke-width="1" opacity="0.5"/>
            <rect x="80" y="150" width="40" height="30" rx="4" stroke="#3730A3" stroke-width="1" opacity="0.5"/>
            <rect x="130" y="150" width="40" height="30" rx="4" stroke="#6366F1" stroke-width="1" opacity="0.5"/>
            <line x1="50" y1="130" x2="50" y2="150" stroke="#B45309" stroke-width="0.75" opacity="0.3"/>
            <line x1="100" y1="130" x2="100" y2="150" stroke="#3730A3" stroke-width="0.75" opacity="0.3"/>
            <line x1="150" y1="130" x2="150" y2="150" stroke="#6366F1" stroke-width="0.75" opacity="0.3"/>
          </svg>
        </div>
      </div>
    </div>
  </section>

  <!-- Social Media Profile Assets -->
  <section class="assets-section" id="assets">
    <div class="section-inner">
      <SectionHeader
        tag="SOCIAL MEDIA ASSETS"
        title="Profile & Banner Graphics"
        description="High-quality SVG assets sized for every major platform. Right-click and save, or drag to your desktop. All assets use the official Grace Network visual identity."
      />

      <!-- Profile Picture Frame -->
      <div class="asset-block">
        <div class="asset-label">
          <h3>Profile Picture Frame</h3>
          <span class="asset-size">400 x 400 &mdash; Overlay on your profile photo</span>
        </div>
        <div class="asset-preview">
          <svg xmlns="http://www.w3.org/2000/svg" width="400" height="400" viewBox="0 0 400 400" class="asset-svg">
            <defs>
              <linearGradient id="pfGrad" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#3730A3"/>
                <stop offset="100%" stop-color="#B45309"/>
              </linearGradient>
              <radialGradient id="pfCenter" cx="50%" cy="50%" r="50%">
                <stop offset="0%" stop-color="transparent"/>
                <stop offset="70%" stop-color="transparent"/>
                <stop offset="100%" stop-color="rgba(139,92,246,0.06)"/>
              </radialGradient>
              <clipPath id="circClip">
                <circle cx="200" cy="200" r="160"/>
              </clipPath>
            </defs>
            <!-- Transparent center for profile photo overlay -->
            <rect width="400" height="400" fill="none"/>
            <!-- Outer gradient ring -->
            <circle cx="200" cy="200" r="190" fill="none" stroke="url(#pfGrad)" stroke-width="6" opacity="0.85"/>
            <circle cx="200" cy="200" r="175" fill="none" stroke="url(#pfGrad)" stroke-width="2" opacity="0.3"/>
            <circle cx="200" cy="200" r="165" fill="none" stroke="#3730A3" stroke-width="0.5" opacity="0.15"/>
            <!-- Network node decorations -->
            <circle cx="200" cy="18" r="8" fill="#B45309" opacity="0.85"/>
            <circle cx="328" cy="78" r="6" fill="#3730A3" opacity="0.7"/>
            <circle cx="378" cy="185" r="7" fill="#B45309" opacity="0.8"/>
            <circle cx="340" cy="310" r="6" fill="#3730A3" opacity="0.7"/>
            <circle cx="248" cy="378" r="8" fill="#B45309" opacity="0.85"/>
            <circle cx="152" cy="378" r="6" fill="#3730A3" opacity="0.7"/>
            <circle cx="60" cy="310" r="7" fill="#B45309" opacity="0.8"/>
            <circle cx="22" cy="185" r="6" fill="#3730A3" opacity="0.7"/>
            <circle cx="72" cy="78" r="8" fill="#B45309" opacity="0.85"/>
            <!-- Connection lines from nodes to ring -->
            <line x1="200" y1="18" x2="200" y2="10" stroke="#B45309" stroke-width="1" opacity="0.4"/>
            <line x1="328" y1="78" x2="335" y2="72" stroke="#3730A3" stroke-width="1" opacity="0.35"/>
            <line x1="378" y1="185" x2="385" y2="183" stroke="#B45309" stroke-width="1" opacity="0.4"/>
