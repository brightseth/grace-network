            <circle cx="778" cy="234" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="778" cy="266" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="750" cy="282" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="722" cy="266" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="722" cy="234" r="5" fill="#B45309" opacity="0.75"/>
            <!-- Main title text -->
            <text x="750" y="140" text-anchor="middle" fill="#1A1A1A" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="64" font-weight="800" letter-spacing="-0.02em">Machines of Loving Grace</text>
            <!-- Tagline -->
            <text x="750" y="390" text-anchor="middle" fill="#3730A3" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="20" font-weight="500" letter-spacing="0.15em" opacity="0.7">A NETWORK STATE FOR HUMAN FLOURISHING</text>
            <!-- Bottom accent line -->
            <line x1="550" y1="420" x2="950" y2="420" stroke="url(#bannerAccent)" stroke-width="1"/>
            <!-- Bottom branding -->
            <text x="750" y="460" text-anchor="middle" fill="#888888" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="14" font-weight="600" letter-spacing="0.2em">THE GRACE NETWORK</text>
          </svg>
        </div>
      </div>

      <!-- Instagram Story Card -->
      <div class="asset-block">
        <div class="asset-label">
          <h3>Instagram Story Card</h3>
          <span class="asset-size">1080 x 1920 (proportional) &mdash; Instagram / TikTok Story format</span>
        </div>
        <div class="asset-preview asset-tall">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1080 1920" class="asset-svg asset-story">
            <defs>
              <linearGradient id="storyBg" x1="0%" y1="0%" x2="0%" y2="100%">
