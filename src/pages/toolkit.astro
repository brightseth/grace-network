            <line x1="0" y1="720" x2="1080" y2="720" stroke="#3730A3" stroke-width="0.5" opacity="0.05"/>
            <line x1="360" y1="0" x2="360" y2="1080" stroke="#3730A3" stroke-width="0.5" opacity="0.05"/>
            <line x1="720" y1="0" x2="720" y2="1080" stroke="#3730A3" stroke-width="0.5" opacity="0.05"/>
