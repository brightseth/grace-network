            <circle cx="540" cy="240" r="56" stroke="#3730A3" stroke-width="2" opacity="0.4"/>
            <circle cx="540" cy="240" r="14" fill="#3730A3" opacity="0.85"/>
            <circle cx="540" cy="212" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="564" cy="226" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="564" cy="254" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="540" cy="268" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="516" cy="254" r="5" fill="#B45309" opacity="0.75"/>
            <circle cx="516" cy="226" r="5" fill="#B45309" opacity="0.75"/>
            <text x="540" y="340" text-anchor="middle" fill="#888888" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="28" font-weight="600" letter-spacing="0.2em">THE GRACE NETWORK</text>
            <!-- Main headline -->
            <text x="540" y="560" text-anchor="middle" fill="#1A1A1A" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="96" font-weight="800" letter-spacing="-0.02em">I SIGNED</text>
            <text x="540" y="680" text-anchor="middle" fill="#1A1A1A" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="96" font-weight="800" letter-spacing="-0.02em">THE</text>
            <text x="540" y="820" text-anchor="middle" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="108" font-weight="800" letter-spacing="-0.02em" fill="#3730A3">CONSTITUTION</text>
            <!-- Decorative line -->
            <line x1="340" y1="890" x2="740" y2="890" stroke="url(#storyAccent)" stroke-width="2" opacity="0.5"/>
            <!-- 7 Pillars list -->
            <text x="540" y="990" text-anchor="middle" fill="#B45309" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="24" font-weight="700" letter-spacing="0.2em">THE SEVEN PILLARS</text>
            <text x="540" y="1060" text-anchor="middle" fill="#1A1A1A" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="36" font-weight="600" opacity="0.85">Safety-First Progress</text>
