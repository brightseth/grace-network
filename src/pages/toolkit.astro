      <!-- Square Social Card -->
      <div class="asset-block">
        <div class="asset-label">
          <h3>Square Social Card</h3>
          <span class="asset-size">1080 x 1080 (proportional) &mdash; Instagram / Facebook / LinkedIn</span>
        </div>
        <div class="asset-preview">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1080 1080" class="asset-svg asset-square">
            <defs>
              <linearGradient id="sqBg" x1="0%" y1="0%" x2="100%" y2="100%">
