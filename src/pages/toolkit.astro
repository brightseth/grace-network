  <script>
    // Copy to clipboard functionality
    function copyToClipboard(text, button) {
      navigator.clipboard.writeText(text).then(() => {
        const original = button.textContent;
        button.textContent = 'Copied!';
        button.classList.add('copied');
        setTimeout(() => {
          button.textContent = original;
          button.classList.remove('copied');
        }, 2000);
      }).catch(() => {
        // Fallback for older browsers
        const textarea = document.createElement('textarea');
        textarea.value = text;
        document.body.appendChild(textarea);
        textarea.select();
        document.execCommand('copy');
        document.body.removeChild(textarea);
        const original = button.textContent;
        button.textContent = 'Copied!';
        button.classList.add('copied');
        setTimeout(() => {
          button.textContent = original;
          button.classList.remove('copied');
        }, 2000);
      });
    }

    // Hashtag pill click handlers
    document.querySelectorAll('.hashtag-pill').forEach(pill => {
      pill.addEventListener('click', () => {
        const text = pill.getAttribute('data-copy') || pill.textContent;
        copyToClipboard(text, pill);
      });
    });

    // Copy button handlers
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const text = btn.getAttribute('data-copy') || '';
        copyToClipboard(text, btn);
      });
    });

    // AI Image Generator
    const genForm = document.getElementById('imageGenForm');
    const promptInput = document.getElementById('imagePrompt');
    const generateBtn = document.getElementById('generateBtn');
    const outputPlaceholder = document.getElementById('outputPlaceholder');
    const outputLoading = document.getElementById('outputLoading');
    const outputResult = document.getElementById('outputResult');
    const outputError = document.getElementById('outputError');
    const generatedImage = document.getElementById('generatedImage');
    const downloadBtn = document.getElementById('downloadBtn');
    const errorMessage = document.getElementById('errorMessage');

    function showState(state) {
      if (outputPlaceholder instanceof HTMLElement) outputPlaceholder.style.display = state === 'placeholder' ? 'flex' : 'none';
      if (outputLoading instanceof HTMLElement) outputLoading.style.display = state === 'loading' ? 'flex' : 'none';
      if (outputResult instanceof HTMLElement) outputResult.style.display = state === 'result' ? 'flex' : 'none';
      if (outputError instanceof HTMLElement) outputError.style.display = state === 'error' ? 'flex' : 'none';
    }

    // Preset prompt buttons
    document.querySelectorAll('.preset-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const prompt = btn.getAttribute('data-prompt');
        if (promptInput instanceof HTMLInputElement && prompt) {
          promptInput.value = prompt;
          genForm?.dispatchEvent(new Event('submit', { cancelable: true }));
        }
      });
    });

    // Form submission
    genForm?.addEventListener('submit', async (e) => {
      e.preventDefault();
      if (!(promptInput instanceof HTMLInputElement)) return;
      const prompt = promptInput.value.trim();
      if (!prompt) return;

      showState('loading');
      if (generateBtn instanceof HTMLButtonElement) {
        generateBtn.disabled = true;
        generateBtn.textContent = 'Generating...';
      }

      try {
        const response = await fetch('/api/party/generate-image', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt }),
        });

        if (!response.ok) {
          throw new Error(`Generation failed (${response.status})`);
        }

        const data = await response.json();

        if (data.imageUrl && generatedImage instanceof HTMLImageElement) {
          generatedImage.src = data.imageUrl;
          if (downloadBtn instanceof HTMLAnchorElement) {
            downloadBtn.href = data.imageUrl;
          }
          showState('result');
        } else {
          throw new Error('No image returned from API');
        }
      } catch (err) {
        if (errorMessage instanceof HTMLElement) {
          errorMessage.textContent = err instanceof Error ? err.message : 'An unexpected error occurred. Please try again.';
        }
        showState('error');
      } finally {
        if (generateBtn instanceof HTMLButtonElement) {
          generateBtn.disabled = false;
          generateBtn.textContent = 'Generate';
        }
      }
    });

    // Regenerate button
    document.getElementById('regenerateBtn')?.addEventListener('click', () => {
      showState('placeholder');
      if (promptInput instanceof HTMLInputElement) {
        promptInput.value = '';
        promptInput.focus();
      }
    });

    // Retry button
    document.getElementById('retryBtn')?.addEventListener('click', () => {
      genForm?.dispatchEvent(new Event('submit', { cancelable: true }));
    });
  </script>

