            <circle cx="136" cy="22" r="3" fill="#3730A3" opacity="0.4"/>
            <circle cx="360" cy="140" r="3" fill="#B45309" opacity="0.35"/>
            <circle cx="360" cy="260" r="3" fill="#B45309" opacity="0.35"/>
            <circle cx="40" cy="140" r="3" fill="#B45309" opacity="0.35"/>
            <circle cx="40" cy="260" r="3" fill="#B45309" opacity="0.35"/>
