            <circle cx="750" cy="250" r="120" stroke="#3730A3" stroke-width="0.75" opacity="0.12"/>
            <circle cx="750" cy="250" r="80" stroke="#3730A3" stroke-width="0.5" opacity="0.09"/>
            <circle cx="750" cy="250" r="40" stroke="#3730A3" stroke-width="0.5" opacity="0.06"/>
            <!-- Network nodes left side -->
