            <text x="310" y="1060" text-anchor="middle" fill="#3730A3" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="24" font-weight="300" opacity="0.4">I</text>
            <text x="310" y="1120" text-anchor="middle" fill="#3730A3" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="24" font-weight="300" opacity="0.4">II</text>
            <text x="310" y="1180" text-anchor="middle" fill="#3730A3" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="24" font-weight="300" opacity="0.4">III</text>
            <text x="310" y="1240" text-anchor="middle" fill="#3730A3" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="24" font-weight="300" opacity="0.4">IV</text>
            <text x="310" y="1300" text-anchor="middle" fill="#3730A3" font-family="Helvetica Neue, Helvetica, Arial, sans-serif" font-size="24" font-weight="300" opacity="0.4">V</text>
