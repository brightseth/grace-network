            <circle cx="320" cy="180" r="5" fill="#3730A3" opacity="0.3"/>
            <circle cx="400" cy="320" r="3" fill="#B45309" opacity="0.2"/>
            <circle cx="480" cy="200" r="4" fill="#3730A3" opacity="0.28"/>
            <circle cx="550" cy="300" r="3" fill="#B45309" opacity="0.25"/>
            <!-- Network nodes right side -->
            <circle cx="950" cy="200" r="4" fill="#3730A3" opacity="0.28"/>
            <circle cx="1020" cy="300" r="3" fill="#B45309" opacity="0.25"/>
            <circle cx="1100" cy="180" r="5" fill="#3730A3" opacity="0.3"/>
            <circle cx="1180" cy="320" r="3" fill="#B45309" opacity="0.2"/>
            <circle cx="1250" cy="150" r="4" fill="#3730A3" opacity="0.25"/>
            <circle cx="1320" cy="280" r="3" fill="#B45309" opacity="0.25"/>
            <!-- Connection lines -->
            <line x1="180" y1="150" x2="320" y2="180" stroke="#3730A3" stroke-width="0.5" opacity="0.12"/>
            <line x1="320" y1="180" x2="480" y2="200" stroke="#3730A3" stroke-width="0.5" opacity="0.12"/>
