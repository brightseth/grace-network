const personalImages = [
  {
    url: "https://images.unsplash.com/photo-1551651653-c5186a1fbba2?auto=format&fit=crop&q=80&w=800",
    caption: "Speaking at Tech Conference 2023"
  },
  {
    url: "https://images.unsplash.com/photo-1491438590914-bc09fcaaf77a?auto=format&fit=crop&q=80&w=800",
    caption: "Team celebration at Bright Moments"
  },
  {
    url: "https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?auto=format&fit=crop&q=80&w=800",
    caption: "Live minting event in Venice"
  },
  {
    url: "https://images.unsplash.com/photo-1505373877841-8d25f7d46678?auto=format&fit=crop&q=80&w=800",
    caption: "Early days at SiteSpecific"
  },
  {
    url: "https://images.unsplash.com/photo-1523580494863-6f3031224c94?auto=format&fit=crop&q=80&w=800",
    caption: "Presenting at Web3 Summit"
  },
  {
    url: "https://images.unsplash.com/photo-1517457373958-b7bdd4587205?auto=format&fit=crop&q=80&w=800",
    caption: "Community gathering in Tokyo"
  }
