---

<section id="gallery" class="py-24 border-y-8 border-black">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-black mb-16 text-center uppercase tracking-tight">
      Gallery
    </h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto">
      {personalImages.map((image) => (
        <div class="group relative aspect-square overflow-hidden border-4 border-black">
          <img
            src={image.url}
            alt={image.caption}
            class="w-full h-full object-cover filter grayscale group-hover:grayscale-0 transition-all duration-300"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-50 transition-all duration-300 flex items-end justify-start p-6">
            <p class="text-white opacity-0 group-hover:opacity-100 transition-all duration-300 text-lg font-bold">
              {image.caption}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>