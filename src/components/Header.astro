---
const links = [
  { href: '#about', text: 'About' },
  { href: '#journey', text: 'Journey' },
  { href: '#principles', text: 'Principles' },
  { href: '#media', text: 'Media' },
  { href: '/writing', text: 'Writing' },
  { href: '#contact', text: 'Contact' }
];
---

<header class="fixed top-0 left-0 right-0 bg-white z-50 border-b-4 border-black">
  <nav class="container mx-auto px-6 py-6 flex justify-between items-center">
    <a href="/" class="text-2xl uppercase tracking-tighter font-black">SG</a>
    <div class="hidden md:flex space-x-12">
      {links.map(link => (
        <a 
          href={link.href} 
          class="text-black hover:bg-black hover:text-white transition-all uppercase tracking-tight text-lg font-bold px-4 py-2"
        >
          {link.text}
        </a>
      ))}
    </div>
    <button 
      class="md:hidden"
      aria-label="Menu"
      id="menu-button"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="3">
        <path stroke-linecap="square" stroke-linejoin="miter" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>
  
  <div 
    id="mobile-menu" 
    class="hidden md:hidden bg-white border-t-4 border-black"
  >
    <nav class="container mx-auto px-6 py-6">
      {links.map(link => (
        <a 
          href={link.href} 
          class="block py-4 text-black hover:bg-black hover:text-white transition-all uppercase tracking-tight text-xl font-bold"
        >
          {link.text}
        </a>
      ))}
    </nav>
  </div>
</header>

<script>
  const menuButton = document.getElementById('menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  const mobileLinks = mobileMenu?.getElementsByTagName('a');
  if (mobileLinks) {
    Array.from(mobileLinks).forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu?.classList.add('hidden');
      });
    });
  }
</script>