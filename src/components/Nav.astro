---
interface Props {
  currentPath?: string;
}

const { currentPath = '/' } = Astro.props;

const links = [
  { href: '/', label: 'Home' },
  { href: '/constitution', label: 'Constitution' },
  { href: '/toolkit', label: 'Toolkit' },
  { href: '/council', label: 'Council' },
];
---

<nav class="party-nav">
  <div class="nav-inner">
    <a href="/" class="nav-logo">
      <svg width="32" height="32" viewBox="0 0 120 120" fill="none" xmlns="http://www.w3.org/2000/svg" aria-label="The Grace Network logo">
        <!-- Connecting lines: center to satellites -->
        <line x1="60" y1="60" x2="60" y2="18" stroke="#8B5CF6" stroke-width="1.5" opacity="0.4"/>
        <line x1="60" y1="60" x2="96" y2="39" stroke="#8B5CF6" stroke-width="1.5" opacity="0.4"/>
        <line x1="60" y1="60" x2="96" y2="81" stroke="#8B5CF6" stroke-width="1.5" opacity="0.4"/>
        <line x1="60" y1="60" x2="60" y2="102" stroke="#D97706" stroke-width="1.5" opacity="0.35"/>
        <line x1="60" y1="60" x2="24" y2="81" stroke="#D97706" stroke-width="1.5" opacity="0.35"/>
        <line x1="60" y1="60" x2="24" y2="39" stroke="#8B5CF6" stroke-width="1.5" opacity="0.4"/>
        <!-- Outer ring connections -->
        <line x1="60" y1="18" x2="96" y2="39" stroke="#8B5CF6" stroke-width="1" opacity="0.2"/>
        <line x1="96" y1="39" x2="96" y2="81" stroke="#8B5CF6" stroke-width="1" opacity="0.2"/>
        <line x1="96" y1="81" x2="60" y2="102" stroke="#A78BFA" stroke-width="1" opacity="0.2"/>
        <line x1="60" y1="102" x2="24" y2="81" stroke="#D97706" stroke-width="1" opacity="0.2"/>
        <line x1="24" y1="81" x2="24" y2="39" stroke="#A78BFA" stroke-width="1" opacity="0.2"/>
        <line x1="24" y1="39" x2="60" y2="18" stroke="#8B5CF6" stroke-width="1" opacity="0.2"/>
        <!-- Satellite nodes (6 pillars on the perimeter) -->
        <circle cx="60" cy="18" r="5" fill="#8B5CF6"/>
        <circle cx="96" cy="39" r="5" fill="#8B5CF6"/>
        <circle cx="96" cy="81" r="5" fill="#A78BFA"/>
        <circle cx="60" cy="102" r="5" fill="#D97706"/>
        <circle cx="24" cy="81" r="5" fill="#D97706"/>
        <circle cx="24" cy="39" r="5" fill="#A78BFA"/>
        <!-- Central node (the 7th pillar: alignment) -->
        <circle cx="60" cy="60" r="11" fill="#8B5CF6"/>
      </svg>
      <span>The Grace Network</span>
    </a>
    <div class="nav-links">
      {links.map(link => (
        <a href={link.href} class={currentPath === link.href ? 'nav-active' : ''}>
          {link.label}
        </a>
      ))}
      <a href="/#sign" class="nav-cta">Join the Network</a>
    </div>
    <button class="mobile-menu-btn" aria-label="Toggle menu">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/>
      </svg>
    </button>
  </div>
</nav>

<script>
  const menuBtn = document.querySelector('.mobile-menu-btn');
  const navLinks = document.querySelector('.nav-links');
  menuBtn?.addEventListener('click', () => {
    navLinks?.classList.toggle('open');
  });
</script>
